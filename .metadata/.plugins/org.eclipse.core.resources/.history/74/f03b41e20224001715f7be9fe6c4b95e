	public static int test2(int[] is){
		 if(is.length<3)
	    	 return 0;
	     int count= 0 ;
	     for (int i = 0; i < is.length; i++) {
			if(i+2>is.length){
				return count;
			}
			
			for (int j = i+2; j < is.length; j++) {
